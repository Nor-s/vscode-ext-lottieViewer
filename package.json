{
  "name": "thorvg-viewer",
  "displayName": "ThorVG Viewer",
  "description": "View and preview Lottie animations and SVG files with ThorVG rendering engine",
  "version": "0.0.3",
  "publisher": "Nors",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nor-s/vscode-ext-lottieViewer.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "lottie",
    "svg",
    "animation",
    "thorvg",
    "viewer",
    "preview"
  ],
  "activationEvents": [
    "onCommand:thorvg-viewer.openThorVGViewer",
    "onCommand:thorvg-viewer.openThorVGViewerWithCurrentFile",
    "onCommand:thorvg-viewer.openExtensionFolder"
  ],
  "main": "./out/extension.js",
  "browser": "./out/web/extension.js",
  "extensionKind": [
    "ui",
    "web"
  ],
  "contributes": {
    "commands": [
      {
        "command": "thorvg-viewer.openThorVGViewer",
        "title": "ThorVG: Open Viewer"
      },
      {
        "command": "thorvg-viewer.openThorVGViewerWithCurrentFile",
        "title": "ThorVG: Open Viewer with Current File",
        "icon": {
          "light": "./thorvg-viewer/favicon.svg",
          "dark": "./media/favicon_white.svg"
        }
      },
      {
        "command": "thorvg-viewer.openExtensionFolder",
        "title": "ThorVG: Open Extension Folder"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "thorvg-viewer.openThorVGViewerWithCurrentFile",
          "when": "resourceExtname == .json || resourceExtname == .svg || resourceExtname == .lot || resourceExtname == .png",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run compile:web",
    "compile": "tsc -p ./",
    "compile:web": "esbuild src/extension.ts --bundle --format=cjs --platform=browser --target=es2020 --outfile=out/web/extension.js --external:vscode --sourcemap",
    "watch": "tsc -watch -p ./",
    "watch:web": "esbuild src/extension.ts --bundle --format=cjs --platform=browser --target=es2020 --outfile=out/web/extension.js --external:vscode --sourcemap --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
